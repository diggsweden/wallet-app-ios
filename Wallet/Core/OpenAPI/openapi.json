{
  "openapi": "3.1.0",
  "info": {
    "title": "Wallet Client Gateway",
    "version": "v1"
  },
  "servers": [
    {
      "url": "/wallet-client-gateway"
    }
  ],
  "security": [
    {
      "ApiKeyScheme": [],
      "SessionIdScheme": []
    }
  ],
  "paths": {
    "/wua": {
      "post": {
        "tags": [
          "wua-controller"
        ],
        "operationId": "createWua",
        "parameters": [
          {
            "name": "nonce",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "500": {
            "description": "Could not create Wua",
            "content": {}
          },
          "400": {
            "description": "Bad input",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestDto"
                }
              }
            }
          },
          "401": {
            "description": "Not authorized",
            "content": {}
          },
          "201": {
            "description": "Wua created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WuaDto"
                }
              }
            }
          }
        }
      }
    },
    "/public/auth/session/response": {
      "post": {
        "tags": [
          "auth-controller"
        ],
        "operationId": "validateChallenge",
        "requestBody": {
          "description": "Challenge response",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ValidateAuthChallengeRequestDto"
              },
              "example": {
                "signedJwt": "insert.signed.jwt"
              }
            }
          },
          "required": true
        },
        "responses": {
          "500": {
            "description": "Unknown error",
            "content": {}
          },
          "400": {
            "description": "Bad input, session not created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestDto"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "Session created",
            "headers": {
              "session": {
                "description": "Session ID",
                "deprecated": true,
                "style": "simple",
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidateAuthChallengeResponseDto"
                }
              }
            }
          }
        }
      }
    },
    "/oidc/accounts/v1": {
      "post": {
        "tags": [
          "account-controller-v-1"
        ],
        "operationId": "createAccount",
        "parameters": [
          {
            "name": "SESSION",
            "in": "header",
            "description": "OIDC session identifier",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAccountRequestDto"
              },
              "example": {
                "personalIdentityNumber": "01234",
                "emailAdress": "digg@example.com",
                "telephoneNumber": "070 007",
                "publicKey": {
                  "kty": "EC",
                  "crv": "P-256",
                  "x": "1fH0eqXgMMwCIafNaDc1axdCjLlw7zpTLvLWjpPvhEc",
                  "y": "5qOejJs7BK-jLingaUTEhBrzP_YPyHfptS5yWE98I40",
                  "kid": "myKey"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "500": {
            "description": "Could not create account, server error",
            "content": {}
          },
          "400": {
            "description": "Bad input, unable to create account",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestDto"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "201": {
            "description": "Account created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateAccountResponseDto"
                }
              }
            }
          }
        }
      }
    },
    "/attribute-attestations": {
      "get": {
        "tags": [
          "attestation-controller"
        ],
        "operationId": "getAttestationsById",
        "parameters": [
          {
            "name": "key",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "500": {
            "description": "Unknown error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestDto"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestDto"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "Attestation found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientAttestationListDto"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "attestation-controller"
        ],
        "operationId": "createAttribute",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAttestationDto"
              },
              "example": {
                "hsmId": "cbe80ad0-6a7d-4a5a-9891-8b4e95fa4d49",
                "wuaId": "790acda4-3dec-4d93-8efe-71375109d30e",
                "attestationData": "string"
              }
            }
          },
          "required": true
        },
        "responses": {
          "500": {
            "description": "Could not create attestation, server error",
            "content": {}
          },
          "400": {
            "description": "Bad input, unable to create attestation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestDto"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "201": {
            "description": "Attestation created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientAttestationDto"
                }
              }
            }
          }
        }
      }
    },
    "/accounts/v1": {
      "post": {
        "tags": [
          "account-controller"
        ],
        "operationId": "createAccount_1",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAccountRequestDto"
              },
              "example": {
                "personalIdentityNumber": "01234",
                "emailAdress": "digg@example.com",
                "telephoneNumber": "070 007",
                "publicKey": {
                  "kty": "EC",
                  "crv": "P-256",
                  "x": "1fH0eqXgMMwCIafNaDc1axdCjLlw7zpTLvLWjpPvhEc",
                  "y": "5qOejJs7BK-jLingaUTEhBrzP_YPyHfptS5yWE98I40",
                  "kid": "myKey"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "500": {
            "description": "Could not create account, server error",
            "content": {}
          },
          "400": {
            "description": "Bad input, unable to create account",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestDto"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "201": {
            "description": "Account created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateAccountResponseDto"
                }
              }
            }
          }
        },
        "deprecated": true
      }
    },
    "/public/auth/session/challenge": {
      "get": {
        "tags": [
          "auth-controller"
        ],
        "operationId": "initChallenge",
        "parameters": [
          {
            "name": "accountId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "keyId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "500": {
            "description": "Unknown error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestDto"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestDto"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "Challenge issued",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthChallengeDto"
                }
              }
            }
          }
        }
      }
    },
    "/oidc/auth": {
      "get": {
        "tags": [
          "oidc-auth-controller"
        ],
        "operationId": "getAppDeeplink",
        "responses": {
          "500": {
            "description": "Internal Server Error"
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestDto"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/attribute-attestations/{id}": {
      "get": {
        "tags": [
          "attestation-controller"
        ],
        "operationId": "getAttestationById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "500": {
            "description": "Unknown error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestDto"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/BadRequestDto"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "200": {
            "description": "Attestation found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientAttestationDto"
                }
              }
            }
          },
          "404": {
            "description": "Attestion not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BadRequestDto": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "status": {
            "type": "integer",
            "format": "int32"
          },
          "detail": {
            "type": "string"
          },
          "instance": {
            "type": "string"
          }
        }
      },
      "WuaDto": {
        "type": "object",
        "properties": {
          "jwt": {
            "type": "string",
            "description": "Wallet unit attestation",
            "example": "ey5359ddf330..."
          }
        },
        "required": [
          "jwt"
        ]
      },
      "ValidateAuthChallengeRequestDto": {
        "type": "object",
        "properties": {
          "signedJwt": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "signedJwt"
        ]
      },
      "ValidateAuthChallengeResponseDto": {
        "type": "object",
        "properties": {
          "sessionId": {
            "type": "string",
            "description": "Session ID",
            "example": "3f2e7c0b-91d2-4a7e-9f34-0d8d9a5a9e77"
          }
        },
        "required": [
          "sessionId"
        ]
      },
      "CreateAccountRequestDto": {
        "type": "object",
        "properties": {
          "personalIdentityNumber": {
            "type": "string"
          },
          "emailAdress": {
            "type": "string",
            "minLength": 1
          },
          "telephoneNumber": {
            "type": "string"
          },
          "publicKey": {
            "$ref": "#/components/schemas/JwkDto"
          }
        },
        "required": [
          "emailAdress",
          "publicKey"
        ]
      },
      "JwkDto": {
        "type": "object",
        "properties": {
          "kty": {
            "type": "string",
            "minLength": 1
          },
          "kid": {
            "type": "string"
          },
          "alg": {
            "type": "string"
          },
          "use": {
            "type": "string"
          },
          "crv": {
            "type": "string",
            "minLength": 1
          },
          "x": {
            "type": "string",
            "minLength": 1
          },
          "y": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "crv",
          "kty",
          "x",
          "y"
        ]
      },
      "CreateAccountResponseDto": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string",
            "format": "uuid"
          }
        }
      },
      "CreateAttestationDto": {
        "type": "object",
        "properties": {
          "hsmId": {
            "type": "string",
            "format": "uuid"
          },
          "wuaId": {
            "type": "string",
            "format": "uuid"
          },
          "attestationData": {
            "type": "string",
            "minLength": 1
          }
        },
        "required": [
          "attestationData",
          "hsmId",
          "wuaId"
        ]
      },
      "ClientAttestationDto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "hsmId": {
            "type": "string",
            "format": "uuid"
          },
          "wuaId": {
            "type": "string",
            "format": "uuid"
          },
          "attestationData": {
            "type": "string"
          }
        }
      },
      "AuthChallengeDto": {
        "type": "object",
        "properties": {
          "nonce": {
            "type": "string"
          }
        }
      },
      "ClientAttestationListDto": {
        "type": "object",
        "properties": {
          "attestations": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ClientAttestationDto"
            }
          },
          "hsmId": {
            "type": "string",
            "format": "uuid"
          }
        }
      }
    },
    "securitySchemes": {
      "ApiKeyScheme": {
        "type": "apiKey",
        "name": "X-API-KEY",
        "in": "header"
      },
      "SessionIdScheme": {
        "type": "apiKey",
        "name": "SESSION",
        "in": "header"
      }
    }
  }
}
